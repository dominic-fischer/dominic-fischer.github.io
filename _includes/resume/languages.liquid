<div class="list-groups">
  {% for content in data[1] %}
    <div class="list-group col-md-6">
      <table class="table-cv list-group-table">
        <tbody>
          <tr>
            <!-- Calculate colspan number for category title -->
            {% assign i = 1 %}
            {% for item in content.items %}
              {% assign i = i | plus: 1 %}
            {% endfor %}
            <td colspan="{{ i }}" class="list-group-category">
              {% if content.emoji_path %}
                <img src="{{ content.emoji_path }}" alt="emoji" style="width: 1em; height: 1em; vertical-align: middle; margin-right: 0.3em;">
                {{ content.language }}
              {% else %}
                {{ content.language | emojify }}
              {% endif %}
            </td>
          </tr>
          <tr>
            <td class="list-group-name">
              {% assign max_level = 5 %}
              {% if content.fluency_level == "N/A" or content.fluency_level == "" or content.fluency_level == nil %}
                <span style="color: #bbb; font-style: italic;">N/A</span>
              {% else %}
                {% for i in (1..max_level) %}
                  {% if i <= content.fluency_level %}
                    <span style="display:inline-block;width:16px;height:16px;background:#2a9d8f;border:1px solid #ddd;margin-right:2px;border-radius:2px;"></span>
                  {% else %}
                    <span style="display:inline-block;width:16px;height:16px;background:#eee;border:1px solid #ddd;margin-right:2px;border-radius:2px;"></span>
                  {% endif %}
                {% endfor %}
              {% endif %}
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  {% endfor %}
</div>
